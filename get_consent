#!/usr/bin/env sh

if [ $# -eq 0 ]; then
    # No arguments, ask for user input
    # read -p "Participant Name: " name
    name="Fred"
else
    # Use the provided argument
    name=$1
fi
dest="consent/$(date +'%y-%m-%d-%H%M') $name.pdf"
mkdir -p consent

cpdf \
    -add-text "$name" \
    -pos-left "210 23" \
    -font "Helvetica-Bold" \
    -font-size 12 \
    forms/consent.pdf \
    -o /tmp/out.pdf &> /dev/null

cpdf \
    -add-text `date +%D` \
    -pos-left "430 59" \
    -font "Helvetica-Bold" \
    -font-size 12 \
    /tmp/out.pdf \
    -o "$dest" &> /dev/null

open -a "Preview" "$dest"
echo "Press enter when form has been saved"
read